{% block body %}
    <div style="position: fixed">
        <h1>Reservation</h1>
    </div>
    {% for reservation in reservations %}
{#        <img src="{{ asset('/images/ticket.png') }}">#}
{#        <img style="width: 400px; height: 400px" src="{{ reservation.idFilm.idFilm.Image }}">#}
        <img style="width: 90%; position: fixed; margin-left: 5%; margin-right: 5%;" src="{{ absolute_url(asset('images/ticket.png')) }}">
        <div style="width: 80%;height: 40%;margin-left: 15%; margin-right: 5%; margin-top: 15%; background-color: #B0413E">
            <div id="film" style="width: 70%;">
                <p> Date de sortie du film : {{ reservation.idFilm.idFilm.DateSortie|date("Y-m")  }}</p>
                <p> Nom du film : {{ reservation.idFilm.idFilm.Nom }}</p>
            </div>
            <div style="margin-left: 55%; margin-top: 4%; background-color: white; position: relative">
                <img style="width: 300px;transform: rotate(90deg)" src="{{ absolute_url(asset('images/code.png')) }}">
            </div>
            <div id="reserv" style="width: 70%;">
                <p> Nombre(s) de places réservés : {{ reservation.NbrPlaces }}</p>
                <p> Horaire de la séance : {{ reservation.idFilm.heure|format_datetime(locale='fr',pattern="EEEE dd MMMM YYYY à HH:mm")}}</p>
                <p> Nom du client : {{ reservation.idUser.Nom }}</p>
                <p> Prenom du client : {{ reservation.idUser.Prenom }}</p>
            </div>
        </div>

    {% endfor %}
{% endblock %}
