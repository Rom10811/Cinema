{% extends 'base.html.twig' %}

{% block title %}Film index{% endblock %}

{% block body %}
    {% for description in descriptions %}
        {{ description.Nom }}
        <p>{{ description.Description }}</p>
        <p>{{ description.DateSortie|date("m/d/Y", "Europe/Paris") }}</p>
        {% for image in description.images %}
            <img src="{{ asset('/images/'~ image.nom) }}">
        {% endfor %}
    {% endfor %}
{% endblock %}
