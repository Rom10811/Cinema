<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/superhero/bootstrap.min.css">
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    {% endblock %}
    <link rel="stylesheet" href="{{ asset('css/animation.css') }}">
</head>
<body>
<div>
            <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">
                <div class="col-md-10">
                    <a class="navbar-brand" href="{{ path('accueil') }}">Accueil</a>
                    {% if is_granted('ROLE_MODERATEUR') %}
                        <a class="navbar-brand" href="{{ path('salle_new') }}">Ajouter une salle</a>
                        <a class="navbar-brand" href="{{ path('film_new') }}">Ajouter un film</a>
                    {% endif %}
                </div>
                <div class="col-md-2" style="display: inline-block; text-align: right">
                    {% if not app.user %}
                        <a class="btn btn-warning" href="{{ path('app_register') }}" style="margin-right: 5px">Inscription</a>
                        <a class="btn btn-success" href="{{ path('app_login') }}">Connexion</a>
                    {% endif %}
                    {% if app.user %}
                        <a class="btn btn-danger" href="{{ path('app_logout') }}">Deconnexion</a>
                    {% endif %}
                </div>
            </nav>
</div>
</body>
{% block body %}
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
{% endblock %}
</html>
